@using OdeToFood.Core
@model Restaurant

<div class="card">
    <div class="panel">
        <h3 class="card-title">@Model.Name</h3>
    </div>
    <div class="card-body">
        <span>Location: @Model.Location</span>
        <span>Cuisine: @Model.Cuisine</span>
    </div>
    <div class="card-footer">
        <a class="btn btn-lg"
           asp-page="./Detail"
           asp-route-ModelId="@Model.Id">
            Detail
            <i class="fa fa-search-plus" />
        </a>
        <a class="btn btn-primary"
           asp-page="./Edit"
           asp-route-ModelId="@Model.Id">
            Edit
            <i class="fa fa-edit" />
        </a>
        <a class="btn btn-primary"
           asp-page="./Delete"
           asp-route-ModelId="@Model.Id">
            Delete
            <i class="fa fa-trash" />
        </a>
    </div>
</div>